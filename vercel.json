{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/finance-tracker/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/finance-tracker/dist/assets/$1"
        },
        {
            "src": "/(?<file>.*\\.(png|jpg|jpeg|svg|ico|json|css|js))",
            "dest": "/frontend/finance-tracker/dist/$file"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/finance-tracker/dist/index.html"
        }
    ]
}